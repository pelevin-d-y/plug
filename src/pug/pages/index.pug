extends ../layout/layout.pug

block content

  - var page = 'index'

  main.main
    .content.market-content
      include ../components/navigation.pug
      .market-logo
      .market-content__container
        .market-content__text
          p.market-content__text
            | We’re still developing but you can still register your username and be the first to know when we're ready!
        form(name="contact" method="POST" data-netlify="true")#formElem.form
          .input-wrapper
            .input-icon ♻️
            input(type="text" name="username" placeholder="Username" required maxlength=50)
          input(type="email" name="email" placeholder="Your e-mail" required maxlength=50)
          input(type="checkbox" name="is_business").form__toggle-checkbox.hidden
          .toggle
            .toggle__variant.toggle__business(data-value="business")
              | Business Entity
            .toggle__variant.toggle__individual.active(data-value="individual")
              | Individual
          input(type="text" name="business_name" placeholder="Business name" maxlength=100).form__business-name.hidden
          input(type="text" name="instagram_name" placeholder="@Instagram" maxlength=200)
          input(type="text" name="twitter_name" placeholder="@Twitter" maxlength=200)
          button(type="submit").form-button
            | Register
      include ../components/footer.pug